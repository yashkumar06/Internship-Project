/*Styling the swing-banner*/
.swing-banner{
    position: relative;
    float: right;

    width: 200px;
    padding: 20px;

    text-align: center;
    color: white;

    background-color:#00008B;
    border-radius: 50%;

    /*adding swing annimation*/
    animation: swing ease-in-out 2s infinite;
}

@keyframes swing {
    /*adding swing annimation using keyframes*/
    0%, 100% {
        transform: rotate(15deg);
      }
      50% {
        transform: rotate(-15deg);
      }
}
.swing-banner span{ 
    
    font-family: 'Montez', cursive;
